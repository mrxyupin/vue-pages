  .main-content
    height calc(100% - 40px)
    display flex
    flex-direction column
    overflow hidden
    #root-main
      flex-grow 1
      height 100%
      &.fpi-layout
        height 100%
        .fpi-left
          height 100%
          box-shadow 1px 0 0 0 #e4e7ed
          overflow auto
        .fpi-right
          height 100%
          padding 16px
          overflow auto
