.el-submenu__icon-arrow
  font-size: 12px !important

/**
*顶部菜单样式补丁
*/
.el-menu
  //border-bottom none!important
  background #001B35
  i.menuIcon
    margin-right 8px
    font-size 18px

.el-menu--horizontal .el-submenu > .el-menu
  top 48px

.el-menu--horizontal .el-submenu
  .el-submenu__title
    padding 0 12px 0 18px
    height 40px
    line-height 40px
    color #fff
    i
      color #fff
    &:hover
      background rgba(255, 255, 255, 0.2)
      color: #fff
      i
        color #fff
  .el-submenu__icon-arrow
    margin-left 4px
.el-menu--horizontal .el-menu-item:hover, .el-menu--horizontal .el-menu-item:focus
  background #2196f3!important
  color #fff
  i
    color #fff
.el-menu--horizontal > .el-menu-item.is-active, .el-menu--horizontal > .el-submenu.is-active .el-submenu__title
  color: #fff
  i
    color #fff
  &:hover
    background rgba(0,21,41,0.5) !important
    color rgba(255,255,255,0.5) !important
    i
      color #47688A !important
.first-menu
  &>.el-menu-item
    color #fff !important
