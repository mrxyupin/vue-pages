body.calcite
  background-color #ffffff !important

#root-view
  min-width 1264px
  height 100%
  //display flex
  //flex-direction column
  #root-header
    z-index 9999
    width 100%
    min-width 1264px
    &.absolute
      header
        background-color rgba(31, 42, 55, 0.8)
        box-shadow 0 2px 3px 0 rgba(0, 0, 0, 0.3)
    header
      background #001529
      height 40px
      padding 0
      .logoBox
        height 24px
        margin-left 12px
        //padding 0 8px
        //border-radius 4px
        //&:hover
        //  background rgba(209, 209, 240, 0.2)
        .logoText
          height 24px
          vertical-align top
      .has-group
        .el-menu
          display flex
      .up-right
        .el-dropdown
          width 40px
          height 40px
          line-height 40px
          cursor pointer
          text-align center
          vertical-align top
          &:hover
            color #fff
            background #409EFF
          &.userIcon
            width 48px
            .el-dropdown-link
              width 48px
              .avatar
                margin-top 8px
                width 24px
                height 24px
                border-radius 50%
          .el-dropdown-link
            display inline-block
            width 40px
            height 40px
            i
              vertical-align sub
